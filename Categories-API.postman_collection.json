{
  "info": {
    "_postman_id": "categories-api-collection",
    "name": "Categories API Collection",
    "description": "Complete Postman collection for Categories API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Categories",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/categories",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "categories"
          ]
        },
        "description": "Get all categories"
      },
      "response": []
    },
    {
      "name": "Get Category By ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/categories/{{category_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "categories",
            "{{category_id}}"
          ]
        },
        "description": "Get a specific category by ID"
      },
      "response": []
    },
    {
      "name": "Create Category",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New Category\",\n  \"description\": \"Category description\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/categories",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "categories"
          ]
        },
        "description": "Create a new category (ADMIN only)"
      },
      "response": []
    },
    {
      "name": "Update Category",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Category\",\n  \"description\": \"Updated description\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/categories/{{category_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "categories",
            "{{category_id}}"
          ]
        },
        "description": "Update an existing category (ADMIN only)"
      },
      "response": []
    },
    {
      "name": "Delete Category",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
