{
  "info": {
    "_postman_id": "users-collection",
    "name": "Users API",
    "description": "Test collection for User Management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8888/api/v1/users?page=0&size=10",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8888",
          "path": ["api", "v1", "users"],
          "query": [
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "Get User By ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8888/api/v1/users/{{user_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8888",
          "path": ["api", "v1", "users", "{{user_id}}"]
        }
      }
    },
    {
      "name": "Get My Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8888/api/v1/users/me",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8888",
          "path": ["api", "v1", "users", "me"]
        }
      }
    },
    {
      "name": "Search User By Phone",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8888/api/v1/users/search/phone?phone=0909123456",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8888",
          "path": ["api", "v1", "users", "search", "phone"],
          "query": [
            {
              "key": "phone",
              "value": "0909123456"
            }
          ]
        }
      }
    },
    {
      "name": "Update User Profile",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstname\": \"John\",\n  \"lastname\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"0909123456\",\n  \"address\": \"123 Main Street\"\n}"
        },
        "url": {
          "raw": "http://localhost:8888/api/v1/users/me",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8888",
          "path": ["api", "v1", "users", "me"]
        }
      }
    },
    {
      "name": "Update User (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstname\": \"Jane\",\n  \"lastname\": \"Smith\",\n  \"email\": \"jane.smith@example.com\",\n  \"phone\": \"0909654321\",\n  \"address\": \"456 Oak Avenue\"\n}"
        },
        "url": {
          "raw": "http://localhost:8888/api/v1/users/{{user_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8888",
          "path": ["api", "v1", "users", "{{user_id}}"]
        }
      }
    },
    {
      "name": "Delete Multiple Users",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userIds\": [\n    \"user-id-1-uuid-here\",\n    \"user-id-2-uuid-here\",\n    \"user-id-3-uuid-here\"\n  ]\n}"
        },
        "url": {
          "raw": "http://localhost:8888/api/v1/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8888",
          "path": ["api", "v1", "users"]
        },
        "description": "Delete multiple users by providing an array of user IDs. Requires ADMIN or STAFF role.\n\nRequest Body:\n- userIds: Array of UUID strings representing the users to delete\n\nResponse:\n- Returns the list of deleted user IDs\n- Also deletes user from Keycloak identity provider"
      }
    }
  ],
  "variable": [
    {
      "key": "jwt_token",
      "value": "",
      "type": "string",
      "description": "JWT token for authentication"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string",
      "description": "User ID in UUID format"
    }
  ]
}
